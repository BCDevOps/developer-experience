  },
  "dependencies" : {
  },
  "devDependencies" : {
    "@sinonjs/referee-sinon" : "4.1.0",
    "browserify" : "16.2.0",
    "eslint" : "5.16.0",
    "eslint-config-sinon" : "1.0.3",
    "eslint-plugin-ie11" : "1.0.0",
    "eslint-plugin-mocha" : "4.11.0",
    "husky" : "2.3.0",
    "jsdom" : "14.0.0",
    "lint-staged" : "8.1.5",
    "mocha" : "5.2.0",
