{
  "name" : "cliui",
  "description" : "easily create complex multi-column command-line-interfaces",
  "version" : "4.1.0",
  "author" : "Ben Coe <ben@npmjs.com>",
  "repository" : {
    "type" : "git",
    "url" : "http://github.com/yargs/cliui.git"
  },
  "main" : "index.js",
  "dist" : {
    "tarball" : "https://artifacts.developer.gov.bc.ca/artifactory/api/npm//npm-remote-cache/cliui/-/cliui-4.1.0.tgz",
    "shasum" : "348422dbe82d800b3022eef4f6ac10bf2e4d1b49"
  },
  "dependencies" : {
    "string-width" : "^2.1.1",
    "strip-ansi" : "^4.0.0",
    "wrap-ansi" : "^2.0.0"
  },
  "devDependencies" : {
    "chai" : "^3.5.0",
    "chalk" : "^1.1.2",
    "coveralls" : "^2.11.8",
    "mocha" : "^3.0.0",
    "nyc" : "^10.0.0",
    "standard" : "^8.0.0",
    "standard-version" : "^3.0.0"
  },
  "keywords" : [ "cli", "command-line", "layout", "design", "console", "wrap", "table" ],
  "license" : "ISC",
  "files" : [ "index.js" ],
  "scripts" : {
    "pretest" : "standard",
    "test" : "nyc mocha",
    "coverage" : "nyc --reporter=text-lcov mocha | coveralls",
    "release" : "standard-version"
  },
  "config" : {
    "blanket" : {
      "pattern" : [ "index.js" ],
      "data-cover-never" : [ "node_modules", "test" ],
      "output-reporter" : "spec"
    }
  },
  "standard" : {
    "ignore" : [ "**/example/**" ],
    "globals" : [ "it" ]
  },
  "engine" : {
    "node" : ">=4"
  }
}